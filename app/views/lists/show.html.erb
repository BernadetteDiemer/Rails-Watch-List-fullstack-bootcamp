<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= @list.name  %>
</div>
  <br>


  <% @list.bookmarks.each do |bookmark| %>
    <img src="<% bookmark.movie.poster_url %>" alt="<% bookmark.movie.title %> movie poster">
    <h4><%= bookmark.movie.title.upcase %></h4>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.comment %></p>
    <h2><%= bookmark.movie.rating %></h2>
    <i class="far fa-trash-alt"></i>
    <%= link_to "Delete #{bookmark.movie.title}", bookmark_path(bookmark.id), method: :delete %>
    <br>
  <% end %>
  <br>
  <p>Add a movie</p>
  <%= simple_form_for [ @list, @bookmark ] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit "add movie", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back to all lists", root_path %>
  <br>
  <br>
  <%= link_to "Delete #{@list.name}",
              list_path(@list.id),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
</div>
